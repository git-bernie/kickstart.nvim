[sqlfluff]
dialect = mysql
templater = raw
max_line_length = 120
# Use all rules, then exclude overly opinionated ones below
rules = all

# Exclude TSQL-specific and jinja rules (not relevant for MySQL)
exclude_rules = TQ01, TQ02, TQ03, JJ01

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.literals]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.types]
capitalisation_policy = upper

[sqlfluff:rules:aliasing.table]
aliasing = explicit

[sqlfluff:rules:aliasing.column]
aliasing = explicit

[sqlfluff:rules:convention.not_equal]
preferred_not_equal_style = consistent

[sqlfluff:rules:convention.count_rows]
prefer_count_1 = false
prefer_count_0 = false

[sqlfluff:rules:layout.indent]
indent_unit = space
tab_space_size = 4

[sqlfluff:rules:layout.commas]
comma_style = trailing

[sqlfluff:rules:layout.long_lines]
max_line_length = 120
